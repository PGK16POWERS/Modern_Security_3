<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/temp_bg"
    tools:context=".Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal"
        android:paddingStart="30dp"
        android:paddingTop="16dp"
        android:paddingEnd="30dp"
        android:paddingBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/white_marj" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/content_bg"
        android:gravity="start"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingTop="20dp"
        android:paddingEnd="30dp"
        android:paddingBottom="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elegantTextHeight="true"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/login"
            android:textColor="#7F0308"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:gravity="start">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email_address"
                android:textColor="#7F0308"
                android:fontFamily="@font/poppins_regular"
                android:elegantTextHeight="true"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start|center"
                android:weightSum="10">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="9"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:elegantTextHeight="true"
                    android:hint="@string/enter_email"
                    android:inputType="textEmailAddress"
                    android:textColorHint="#B19292"
                    android:textSize="16sp"
                    android:textColor="#7F0308"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/poppins_medium"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/red_email"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/input_line"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:gravity="start">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:textColor="#7F0308"
                android:elegantTextHeight="true"
                android:fontFamily="@font/poppins_regular"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start|center"
                android:weightSum="10">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="9"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:elegantTextHeight="true"
                    android:hint="@string/enter_password"
                    android:textColorHint="#B19292"
                    android:inputType="textPassword"
                    android:textSize="16sp"
                    android:textColor="#7F0308"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/poppins_medium"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/red_password"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/input_line"/>

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start|center"
            android:layout_marginTop="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp">

            <CheckBox
                android:layout_width="25px"
                android:layout_height="25px"
                android:background="@drawable/checkbox"
                android:layout_marginEnd="10dp"
                android:button="@null"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/i_agree"
                android:textColor="#3D3D3D"
                android:elegantTextHeight="true"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_medium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/terms"
                android:textColor="#7F0308"
                android:elegantTextHeight="true"
                android:textSize="12sp"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/poppins_semibold"/>

        </LinearLayout>

        <Button
            android:id="@+id/get_started_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/primary_button"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="@string/login"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_medium"
            android:elevation="2dp"
            android:textAllCaps="false"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/not_signed_up"
                android:textColor="#3D3D3D"
                android:elegantTextHeight="true"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_medium"/>

            <TextView
                android:id="@+id/create_account_redirect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_acc"
                android:textColor="#F84F66"
                android:elegantTextHeight="true"
                android:textSize="12sp"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/poppins_semibold"/>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>